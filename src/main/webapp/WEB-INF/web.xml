<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>images.directory</param-name>
        <!-- Tomcat must have write permissions on this folder -->
        <param-value>C:\xampp\tomcat\webapps\disim_we-1.0\images</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template</param-name>
        <param-value>admin_template/outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.outline_template2</param-name>
        <param-value>user_template/outline.ftl.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.date_format</param-name>
        <param-value>dd/MM/yyyy hh:mm:ss</param-value>
    </context-param>
    <context-param>
        <param-name>view.debug</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <param-name>view.template_directory</param-name>
        <param-value>templates</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url</param-name>
        <param-value>homepage</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.static.homepage_url2</param-name>
        <param-value>index</param-value>
    </context-param>
    <context-param>
        <param-name>view.encoding</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template</param-name>
        <param-value>/admin_template/500.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.error_template2</param-name>
        <param-value>/user_template/500.html</param-value>
    </context-param>
    <context-param>
        <param-name>view.data.filler.timestamp</param-name>
        <param-value>it.univaq.example.webshop.controller.DummyModelFiller</param-value>
    </context-param>
    <context-param>
        <param-name>security.protect.patterns</param-name>
        <!-- qui configuriamo i pattern delle URL da proteggere -->
        <param-value>/compose,/write</param-value>        
    </context-param>
    <context-param>
        <param-name>data.source</param-name>
        <!-- qui configuriamo il nome della data source da usare nel codice -->
        <param-value>jdbc/webshopdb</param-value>
    </context-param>
    <context-param>
        <param-name>emailSender</param-name>
        <param-value>rossofuoco1999@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>securityCode</param-name>
        <param-value>vmne carf ozpp qqyd</param-value>
    </context-param>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>forgotPassword</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ForgotPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Logout</servlet-class>
    </servlet>  
    <servlet>
        <servlet-name>homepage</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Profile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListStaff</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageStaff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListClients</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageClients</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListRequests</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageRequests</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListOrders</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageOrders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDetail</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageOrderDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListFiles</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageFiles</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Image</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.RenderImage</servlet-class>
        <multipart-config>
            <max-file-size>20848820</max-file-size>
            <!-- max size of accepted uploadd (DEF: unlimited!) -->
            <max-request-size>418018841</max-request-size>
            <!-- max size of multipart requests (may contain more files or data) (DEF: ulimited!) -->
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ListCategories</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageCategories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CategoryDetail</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageCategoryDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNotifications</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.ManageNotifications</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>it.univaq.example.webshop.controller.Index</servlet-class>
    </servlet> 
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>forgotPassword</servlet-name>
        <url-pattern>/forgot_password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepage</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStaff</servlet-name>
        <url-pattern>/staff</url-pattern>
    </servlet-mapping>    
    <servlet-mapping>
        <servlet-name>ListClients</servlet-name>
        <url-pattern>/clients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListRequests</servlet-name>
        <url-pattern>/requests</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListOrders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
        <servlet-mapping>
        <servlet-name>OrderDetail</servlet-name>
        <url-pattern>/orderDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListFiles</servlet-name>
        <url-pattern>/files</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListCategories</servlet-name>
        <url-pattern>/categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CategoryDetail</servlet-name>
        <url-pattern>/categoryDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNotifications</servlet-name>
        <url-pattern>/myNotifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>jdbc/webshopdb</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>